@model Fashion.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_Login.cshtml";
}

@Html.Partial("_MessageAlert")

<div class="login-box-body">
    <p class="login-box-msg">Đăng nhập hệ thống</p>

    @using (Html.BeginForm("Login", "AuthAdmin", FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
        <div class="form-group has-feedback">
            @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập tài khoản", @required = "true" })
        </div>
        <div class="form-group has-feedback">
            @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập mật khẩu", @required = "true" })
        </div>
        <div class="row">
            <!-- /.col -->
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>

            </div>
        </div>
    }
</div>

