@model Fashion.Models.Category
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Admin/assets/bower_components/jquery/dist/jquery.min.js"></script>
<script src="~/Areas/Admin/assets/bower_components/ckeditor/ckeditor.js"></script>
<section class="content">
    <div class="box box-warning" style="margin-bottom:0px">
        <div class="box-header with-border">
            <h3 class="box-title">Thêm sản phẩm mới</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            @using (Html.BeginForm("Create", "CategoryAdmin", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Tên danh mục:</label>
                    @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @required = "true", @placeholder = "Nhập tên danh mục" })

                </div>
                <div class="box-footer">

                    <button type="submit" class="btn btn-primary">Thêm mới</button>
                    <a href="/Admin/CategoryAdmin/Index" class="btn btn-default">Quay lại</a>
                </div>
            }
        </div>
    </div>
</section>
<script>
</script>

