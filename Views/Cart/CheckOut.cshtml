@model Fashion.Models.Customer
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var cart = (Fashion.ViewModel.CartTotal)Session["CartPrint"];
}
<main id="mt-main">
    <section class="mt-contact-banner mt-banner-22" style="background-image: url(/assets/images/img-76.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="text-center">Thanh toán</h1>
                    <!-- Breadcrumbs of the Page -->
                    <nav class="breadcrumbs">
                        <ul class="list-unstyled">
                            <li><a href="/">Trang chủ <i class="fa fa-angle-right"></i></a></li>
                            <li>Thanh toán</li>
                        </ul>
                    </nav>
                    <!-- Breadcrumbs of the Page end -->
                </div>
            </div>
        </div>
    </section>
    <!-- Mt Process Section of the Page -->
    <div class="mt-process-sec">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <!-- Process List of the Page -->
                    <ul class="list-unstyled process-list">
                        <li class="active">
                            <span class="counter">01</span>
                            <strong class="title">Giỏ hàng</strong>
                        </li>
                        <li class="active">
                            <span class="counter">02</span>
                            <strong class="title">Thanh toán</strong>
                        </li>
                        <li>
                            <span class="counter">03</span>
                            <strong class="title">Thành công</strong>
                        </li>
                    </ul>
                    <!-- Process List of the Page end -->
                </div>
            </div>
        </div>
    </div><!-- Mt Process Section of the Page end -->
    <!-- Mt Detail Section of the Page -->
    <section class="mt-detail-sec toppadding-zero">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <h2>Chi tiết đươn hàng</h2>
                    <!-- Bill Detail of the Page -->
                    <form action="/cart/payment" method="post" class="bill-detail">
                        <fieldset>
                            <div class="form-group">
                                <input type="text" style="display:none" name="Id" value="@Model.Id" />
                                <input type="text" class="form-control" name="Name" value="@Model.Name" placeholder="Họ và tên">
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" name="Email" value="@Model.Email" placeholder="Email khách hàng">
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="Address" value="@Model.Address" placeholder="Địa chỉ khách hàng" />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="Phone" value="@Model.Phone" placeholder="Nhập số điện thoại">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="AddressMore" value="@Model.Address" placeholder="Địa chỉ nhận hàng khác"></textarea>
                            </div>
                        </fieldset>
                        <button type="submit" style="border:none" class="process-btn">Gửi đơn hàng <i class="fa fa-check"></i></button>
                    </form>
                    <!-- Bill Detail of the Page end -->
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="holder">
                        <h2>Hóa đơn của bạn</h2>
                        <ul class="list-unstyled block">
                            <li>
                                <div class="txt-holder">
                                    <strong class="title sub-title pull-left">Tổng tiền</strong>
                                    <div class="txt pull-right">
                                        <span> @cart.Total VNĐ</span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="txt-holder">
                                    <strong class="title sub-title pull-left">Mã giảm giá</strong>
                                    <div class="txt pull-right">
                                        <span> @cart.Value % </span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="txt-holder">
                                    <strong class="title sub-title pull-left">Vận chuyển</strong>
                                    <div class="txt pull-right">
                                        <span>Miễn phí vận chuyển</span>
                                    </div>
                                </div>
                            </li>
                            <li style="border-bottom: none;">
                                <div class="txt-holder">
                                    <strong class="title sub-title pull-left">Tổng thanh toán</strong>
                                    <div class="txt pull-right">
                                        <span> @cart.Payment VNĐ</span>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Mt Detail Section of the Page end -->
</main>

